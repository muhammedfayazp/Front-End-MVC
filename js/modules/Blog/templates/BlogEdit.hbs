<div class="ui breadcrumb">
    <a class="section" href="/#blogs">Blogs</a>
    <i class="right arrow icon divider"></i>
    <a class="active section" href="/#blog/{{id}}">{{title}}</a>
</div>
<div class="ui divider"></div>
<form id="blog-form" class="ui error form segment">
    <input type="hidden" name="id" value="{{id}}" />
    <div class="field">
        <label>Title</label>
        <input class="blog-title" type="text" name="title" value="{{title}}" />
    </div>
    <div class="field">
        <label>Body</label>
        <textarea name="body">{{{body}}}</textarea>
    </div>
    <div class="ui teal submit button blog-submit">Blog Submit</div>
</form>